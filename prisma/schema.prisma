generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Post {
  id               Int      @id @default(autoincrement())
  postNumber       Int      @map("post_number")
  week             String
  date             String
  dayOfWeek        String   @map("day_of_week")
  author           String
  platform         String
  postType         String   @map("post_type")
  hook             String
  body             String
  visualDescription String  @default("") @map("visual_description")
  cta              String   @default("")
  hashtags         String   @default("")
  postingTime      String   @default("") @map("posting_time")
  status           String   @default("not_started")
  postedAt         String?  @map("posted_at")
  notes            String   @default("")
  sortOrder        Int      @map("sort_order")

  @@map("posts")
}

model Idea {
  id           Int      @id @default(autoincrement())
  author       String
  platform     String
  concept      String
  fullDraft    String   @default("") @map("full_draft")
  category     String   @default("")
  addedToQueue Boolean  @default(false) @map("added_to_queue")

  @@map("ideas")
}
